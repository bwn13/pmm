<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">


    <TextView
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:text="Ingrese primer valor"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:id="@+id/editText2" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:text="Ingrese segundo valor"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true"
        android:id="@+id/textView" />

   <EditText
        android:layout_width="170dp"
        android:layout_height="36dp"
        android:id="@+id/editText"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <RadioGroup
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:clickable="true"
        android:id="@+id/rdg"
        android:focusable="true"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suma"
            android:id="@+id/r1"
            android:layout_above="@+id/rdg"
            android:layout_centerHorizontal="true"
            android:layout_gravity="left" />


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resta"
            android:id="@+id/r2"
            android:layout_gravity="left" />

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Operar"
        android:id="@+id/button"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/rdg"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:text=""
        android:id="@+id/resul"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <CheckBox
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/chekea"
        android:layout_below="@+id/resul"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />
    <TextView
        android:layout_width="170dp"
        android:layout_height="25dp"
        android:text="Pulsa aqui para Divertirte!"
        android:layout_alignTop="@+id/chekea"
        android:layout_toRightOf="@+id/button"
        android:id="@+id/textView2" />
    <ImageView
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:id="@+id/img"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:visibility="visible"/>

</RelativeLayout>
